{{!-- displays featured article --}}
<section id="blogPost-section">
  <div class="container">
    <div class="card mb-3">
      <div class="card-header bg-dark text-white">
        Featured Article
      </div>
      <div class="card-body">
        <h2 class="card-title">{{userPost.post_title}}</h2>
        <p class="d-none" id="post-id">{{userPost.post_id}}</p>
        <p class="card-text">{{userPost.post_body}}</p>
        <p>By: {{userPost.username}}</p>
        <p>{{userPost.post_date}}</p>
      </div>

{{!-- Comment if logged in --}}
    <div class="card">
      <div class="card-header bg-dark text-white">
        Comments
      </div>
      <div class="card-body">
        <ul>
          {{#each blog.comments as |comment|}}
            <p>{{comment.user.username}}</p> 
              <p>Date: {{comment.post_date}}</p>
            <li>{{comment.comment_text}}</li>
            <hr />
          {{/each}}
        </ul>
      </div>
    </div>
{{#if sessionData.isLoggedIn}}
    <div class="container">
      <div class="card mb-3">
        <div class="card-header bg-dark text-white">
          Add a Comment
        </div>
        <div class="card-body d-flex flex-column">
          <textarea class="form-control mb-4" id="comment-text" rows="5" placeholder="Add Comment Here..."></textarea>
          <button class="btn btn-outline-secondary" id="comment-btn">Add Comment</button>
        </div>
      </div>
    </div>
    {{/if}}


  </div>
</section>

