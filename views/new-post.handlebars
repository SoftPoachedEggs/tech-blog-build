{{>dashnav}}
<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  

<div class="container">
	<div class="row">
	    
	    <div class="col-md-8 col-md-offset-2">
	        
    		<h1>Create post</h1>
        <br>
        <p>Upload Article Image</p>
        <img src="" id="upload-thumb" class="img-thumbnail" alt="Image preview" style="display: none;">
    		<button id="upload_widget" class="cloudinary-button">Upload files</button>
        <br>
        <br>
    		<form action="" method="POST">
    		    <div class="form-group">
    		        <label for="title">Title <span class="require">*</span></label>
    		        <input type="text" id="title-input" class="form-control" name="title" />
    		    </div>
				
				<p>Choose a topic:</p>
				<div class="form-check" id="radio-topic">
					<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="AI" checked>
					<label class="form-check-label" for="exampleRadios1">
						A.I.
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="Science">
					<label class="form-check-label" for="exampleRadios2">
						Science
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="Humor">
					<label class="form-check-label" for="exampleRadios3">
						Entertainment
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4" value="Culture">
					<label class="form-check-label" for="exampleRadios4">
						Entertainment
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios5" value="Politics">
					<label class="form-check-label" for="exampleRadios5">
						Politics
				</label>
				</div>

    		    <br>
    		    <div class="form-group">
    		        <label for="description">Content<span class="require">*</span></label>
    		        <textarea rows="5" id="content-input" class="form-control" name="description" ></textarea>
    		    </div>
    		    
    		    <div class="form-group">
    		        <p><span class="require">*</span> - required fields</p>
    		    </div>

    		    <div class="form-group">
    		        <button type="submit" id="submit-button" class="btn btn-primary">
    		            Create
    		        </button>
    		        <button class="btn btn-default">
    		            Cancel
    		        </button>
    		    </div>
    		    
    		</form>
		</div>
		
	</div>
</div>

<script src="/js/new.js"></script>