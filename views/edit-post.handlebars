{{>dashnav}}

<div class="container">
	<div class="row">
	    <div class="col-md-8 col-md-offset-2">
    		<h1>Create post</h1>
    			<form>
					<div class="form-group">
						<label for="title">Title <span class="require">*</span></label>
						<input type="text" id="edit-title" class="form-control" name="title" value="{{userPost.post_title}}"/>
					</div>
					<div class="form-group">
						<label for="description">Content</label>
						<textarea rows="5" id="edit-content" class="form-control" name="description">{{userPost.post_body}}</textarea>
					</div>
					<div class="form-group">
						<p><span class="require">*</span> - required fields</p>
					</div>
    			</form>
    		        <button type="submit" id="update-btn" class="btn btn-primary">
    		            Save Edit
    		        </button>
    		        <button class="btn btn-default" id="cancel-btn">
    		            Cancel
    		        </button>
					<button class="btn btn-default btn-danger" id="delete-post-btn">
    		            Delete
    		        </button>
        	<div style="display:none;" id="hidden-post-number">{{userPost.post_id}}</div>
		</div>
	</div>
</div>




<script src="/js/edit.js"></script>