{{>dashnav}}

  <section id="user-posts" class="text-black">
    <div class="container">
      <div class="row">
        <div class="col-12 justify-content-center align-items-center">
          <h2>My Articles</h2>
          <hr />
          {{#if userPosts}}
            {{#each userPosts as |blogPost|}}
              <article class="blog-post">
                <h2 class="blog-post-title mb-1">{{blogPost.post_title}}</h2>
                <p class="blog-post-meta">Created:
                  {{blogPost.post_date}}</p>
                <a href="/edit/{{blogPost.post_id}}" class="text-grey">Edit Article</a>
              </article>
              <hr />
            {{/each}}
          {{else}}
            <h2>Click New Post to write your first article...</h2>
          {{/if}}
        </div>
      </div>
    </div>
  </section>